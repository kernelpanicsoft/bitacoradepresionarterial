<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/imagePicCV"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="75dp"
        app:cardElevation="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        >
        <ImageView
            android:id="@+id/profileIV"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
         />

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/nombreUsuarioTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="hola"
        android:textColor="@android:color/black"
        android:textSize="@dimen/subtitulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePicCV"
        app:layout_constraintTop_toTopOf="@+id/imagePicCV" />

    <TextView
        android:id="@+id/apellidosUsuarioTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="mundo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagePicCV"
        app:layout_constraintTop_toBottomOf="@+id/nombreUsuarioTV"
        android:textColor="@android:color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>